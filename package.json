{
	"name": "@natlibfi/melinda-record-import-transformer-helmet",
	"description": "Helmet record transformer for the Melinda record batch import system",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://github.com/natlibfi/melinda-record-import-transformer-helmet",
	"bugs": {
		"url": "https://github.com/natlibfi/melinda-record-import-transformer-helmet/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:natlibfi/melinda-record-import-transformer-helmet.git"
	},
	"license": "AGPL-3.0+",
	"version": "1.0.1-alpha.3",
	"main": "./dist/index.js",
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"start": "node dist/index.js",
		"cli": "node dist/cli.js",
		"lint": "eslint src",
		"lint:dev": "eslint --fix src",
		"test:base": "cross-env NODE_ENV=test nyc --reporter=text mocha --reporter-option maxDiffSize=15000 --config mocharch.json",
		"test": "npm run lint && npm run test:base",
		"test:dev": "npm run lint:dev && npm run test:base && npm run coverage",
		"coverage": "nyc check-coverage --per-file --reporter=text",
		"build": "babel src --source-maps --copy-files --delete-dir-on-start --out-dir=dist",
		"watch:test": "cross-env DEBUG=1 NODE_ENV=test nodemon -w src --exec 'npm run test:dev'",
		"watch:dev": "cross-env DEBUG=1 nodemon -w src --exec 'babel-node src/index.js'"
	},
	"dependencies": {
		"@babel/runtime": "latest",
		"@natlibfi/marc-record": "^7.2.4",
		"@natlibfi/marc-record-validate": "^8.0.1",
		"@natlibfi/marc-record-validators-melinda": "^10.9.3",
		"@natlibfi/melinda-backend-commons": "^2.2.1",
		"@natlibfi/melinda-commons": "^13.0.5",
		"@natlibfi/melinda-record-import-commons": "^10.1.7",
		"amqplib": ">=0.10.3 <1.0.0",
		"moment": "^2.29.4",
		"stream-chain": "^2.2.5",
		"stream-json": "^1.8.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.22.9",
		"@babel/core": "latest",
		"@babel/eslint-parser": "latest",
		"@babel/node": "^7.22.6",
		"@babel/preset-env": "latest",
		"@babel/register": "^7.22.5",
		"@natlibfi/eslint-config-melinda-backend": "^3.0.0",
		"@natlibfi/fixugen": "^2.0.1",
		"@natlibfi/fixura": "^3.0.1",
		"babel-plugin-rewire": "^1.2.0",
		"chai": "^4.3.7",
		"chai-as-promised": "^7.1.1",
		"cross-env": "^7.0.3",
		"eslint": "^8.46.0",
		"mocha": "^10.2.0",
		"nodemon": "^3.0.1",
		"nyc": "^15.1.0"
	},
	"eslintConfig": {
		"parser": "@babel/eslint-parser",
		"extends": "@natlibfi/melinda-backend"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": "maintained node versions"
				}
			]
		],
		"env": {
			"test": {
				"plugins": [
					"rewire"
				]
			}
		}
	},
	"nyc": {
		"exclude": [
			"src/*.spec.js",
			"src/*/*.spec.js",
			"src/*/*/*.spec.js"
		],
		"reporter": [
			"lcov",
			"html"
		],
		"require": [
			"@babel/register"
		],
		"sourceMap": false,
		"instrument": false,
		"lines": 80,
		"statements": 80,
		"functions": 80,
		"branches": 80
	}
}
