{
	"name": "@natlibfi/melinda-record-import-transformer-helmet",
	"description": "Helmet record transformer for the Melinda record batch import system",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://github.com/natlibfi/melinda-record-import-transformer-helmet",
	"bugs": {
		"url": "https://github.com/natlibfi/melinda-record-import-transformer-helmet/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:natlibfi/melinda-record-import-transformer-helmet.git"
	},
	"license": "AGPL-3.0+",
	"version": "1.0.0",
	"main": "./dist/index.js",
	"engines": {
		"node": ">=8"
	},
	"scripts": {
		"start": "node dist/index.js",
		"cli": "node dist/cli.js",
		"check-deps": "npm-check;exit 0",
		"lint": "eslint --fix src",
		"test:base": "cross-env NODE_ENV=test mocha --require @babel/register",
		"test": "npm run lint && npm run test:base -- src/**/*.spec.js",
		"build": "babel src --source-maps --delete-dir-on-start --out-dir=dist --minified",
		"build:dev": "npm run build:transpile && npm run check-deps",
		"watch": "cross-env DEBUG=1 NODE_ENV=debug nodemon --watch src --exec 'npm test'"
	},
	"dependencies": {
		"@natlibfi/marc-record": "^4.0.0",
		"@natlibfi/marc-record-validate": "^4.0.0",
		"@natlibfi/marc-record-validators-melinda": "^6.0.0",
		"@natlibfi/melinda-commons": "^5.0.0",
		"@natlibfi/melinda-record-import-commons": "https://github.com/natlibfi/melinda-record-import-commons#feature-state-mgmt",
		"get-stream": "^4.0.0",
		"moment": "^2.22.2"
	},
	"devDependencies": {
		"@babel/cli": "^7.2.0",
		"@babel/core": "^7.2.0",
		"@babel/node": "^7.2.0",
		"@babel/preset-env": "^7.2.0",
		"@babel/register": "^7.0.0",
		"babel-eslint": "^8.2.6",
		"babel-plugin-rewire": "^1.2.0",
		"chai": "^4.2.0",
		"cross-env": "^5.2.0",
		"eslint": "^5.5.0",
		"eslint-config-xo": "^0.25.0",
		"eslint-plugin-import": "^2.13.0",
		"mocha": "^5.2.0",
		"nodemon": "^1.18.4",
		"npm-check": "^5.7.1",
		"sinon": "^7.2.2",
		"sinon-chai": "^3.3.0"
	},
	"eslintConfig": {
		"parser": "babel-eslint",
		"plugins": [
			"import"
		],
		"extends": [
			"xo",
			"plugin:import/errors"
		],
		"rules": {
			"prefer-arrow-callback": [
				"error"
			]
		},
		"env": {
			"mocha": true
		}
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"node": "8"
					}
				}
			]
		],
		"env": {
			"test": {
				"plugins": [
					"rewire"
				]
			}
		}
	}
}
