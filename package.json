{
	"name": "@natlibfi/melinda-record-import-transformer-helmet",
	"description": "Helmet record transformer for the Melinda record batch import system",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://github.com/natlibfi/melinda-record-import-transformer-helmet",
	"bugs": {
		"url": "https://github.com/natlibfi/melinda-record-import-transformer-helmet/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:natlibfi/melinda-record-import-transformer-helmet.git"
	},
	"license": "AGPL-3.0+",
	"version": "1.0.0",
	"main": "./dist/index.js",
	"engines": {
		"node": ">=7"
	},
	"scripts": {
		"start": "node dist/index.js",
		"prepublishOnly": "npm run build:transpile",
		"check-deps": "npm-check;exit 0",
		"lint": "eslint --fix src",
		"test:unit": "cross-env NODE_ENV=test nyc mocha --require babel-core/register",
		"test": "npm run lint && npm test",
		"coverage": "nyc check-coverage",
		"clean": "rimraf build coverage .nyc_output dist",
		"build:transpile": "babel src --source-maps --out-dir=dist --minified",
		"build": "npm run build:transpile && npm run check-deps",
		"watch:test": "cross-env DEBUG=1 NODE_ENV=debug nodemon --watch src --exec 'npm test && babel-node src/index.js'",
		"watch:build": "cross-env DEBUG=1 NODE_ENV=debug nodemon --watch src --exec 'babel-node src/index.js'",
		"publish-to-npm": "npm install && npm test && npm run coverage && npm publish --access=public"
	},
	"dependencies": {
		"marc-record-js": "https://github.com/natlibfi-arlehiko/marc-record-js",
		"@natlibfi/marc-record-validators-melinda": "^2.0.0",
		"@natlibfi/melinda-record-import-commons": "^1.1.3",
		"amqplib": ">=0.5.0 <1.0.0",
		"moment": "^2.20.1"
	},
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-eslint": "^8.2.6",
		"babel-preset-env": "^1.6.1",
		"babel-register": "^6.26.0",
		"cross-env": "^5.2.0",
		"eslint": "^5.2.0",
		"eslint-config-xo": ">=0.24.1 <1.0.0",
		"eslint-plugin-import": "^2.13.0",
		"nodemon": "^1.18.3",
		"npm-check": "^5.7.1",
		"rimraf": "^2.6.2"
	},
	"eslintConfig": {
		"parser": "babel-eslint",
		"plugins": [
			"import"
		],
		"extends": [
			"xo",
			"plugin:import/errors"
		],
		"rules": {
			"prefer-arrow-callback": [
				"error"
			]
		}
	},
	"babel": {
		"presets": [
			[
				"env",
				{
					"targets": {
						"node": "7"
					}
				}
			]
		],
		"env": {
			"test": {
				"plugins": [
					"istanbul"
				]
			}
		}
	},
	"nyc": {
		"reporter": [
			"lcov",
			"html"
		],
		"require": [
			"babel-register"
		],
		"sourceMap": false,
		"instrument": false,
		"lines": 80,
		"statements": 80,
		"functions": 80,
		"branches": 80
	}
}
