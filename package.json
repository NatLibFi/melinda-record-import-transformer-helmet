{
	"name": "@natlibfi/melinda-record-import-transformer-helmet",
	"description": "Helmet record transformer for the Melinda record batch import system",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://github.com/natlibfi/melinda-record-import-transformer-helmet",
	"bugs": {
		"url": "https://github.com/natlibfi/melinda-record-import-transformer-helmet/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:natlibfi/melinda-record-import-transformer-helmet.git"
	},
	"license": "AGPL-3.0+",
	"version": "1.0.0",
	"main": "./dist/index.js",
	"engines": {
		"node": ">=7"
	},
	"scripts": {
		"start": "node dist/index.js",
		"prepublishOnly": "npm run build:transpile",
		"check-deps": "npm-check;exit 0",
		"lint": "eslint --fix src",
		"test": "npm run lint",
		"clean": "rimraf build dist",
		"build:transpile": "babel src --source-maps --out-dir=dist --minified",
		"build": "npm run build:transpile && npm run check-deps",
		"watch": "cross-env DEBUG=1 NODE_ENV=debug nodemon --watch src --exec 'npm test && babel-node src/index.js'"
	},
	"dependencies": {
		"@natlibfi/marc-record": "^3.0.0",
		"@natlibfi/marc-record-validate": "^3.0.1",
		"@natlibfi/marc-record-validators-melinda": "^4.2.0",
		"@natlibfi/melinda-record-import-commons": "^1.5.0",
		"csv": "^3.1.0",
		"csv-parse": "^3.0.0",
		"get-stream": "^4.0.0",
		"moment": "^2.22.2",
		"ora": "^3.0.0",
		"progress": "^2.0.0"
	},
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-eslint": "^8.2.6",
		"babel-preset-env": "^1.6.1",
		"babel-register": "^6.26.0",
		"cross-env": "^5.2.0",
		"eslint": "^5.5.0",
		"eslint-config-xo": "^0.25.0",
		"eslint-plugin-import": "^2.13.0",
		"nodemon": "^1.18.4",
		"npm-check": "^5.7.1",
		"rimraf": "^2.6.2"
	},
	"eslintConfig": {
		"parser": "babel-eslint",
		"plugins": [
			"import"
		],
		"extends": [
			"xo",
			"plugin:import/errors"
		],
		"rules": {
			"prefer-arrow-callback": [
				"error"
			]
		}
	},
	"babel": {
		"presets": [
			[
				"env",
				{
					"targets": {
						"node": "7"
					}
				}
			]
		]
	}
}
